<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

 <ImageView
     android:scaleType="centerCrop"
     android:id="@+id/iv_consum_iten"
     android:src="@mipmap/login_logo"
     android:layout_width="100dp"
     android:layout_height="100dp" />
  <TextView
      android:layout_marginTop="5dp"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@id/iv_consum_iten"
      android:textColor="@color/text2"
      android:text="毛巾超吸水我啊爱你你热辣嫩肉惹了你饶了你两人哪里肯冷热了呢热"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/tv_consum_Residue"
        android:layout_alignBottom="@id/iv_consum_iten"
        android:text="剩余10件"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_consum_iten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_consum_iten"
        android:layout_above="@id/tv_consum_Residue"
        android:textColor="@color/text5"
        android:text="￥17.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginBottom="7dp"
        android:layout_alignBottom="@id/tv_consum_Residue"
        android:layout_alignParentRight="true"
        android:background="@color/text5"
        android:textSize="@dimen/text1"
        android:textColor="@color/white"
        android:text="兑换"
        android:layout_width="90dp"
        android:layout_height="30dp" />
</RelativeLayout>