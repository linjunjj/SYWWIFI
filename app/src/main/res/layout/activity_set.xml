<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/activitybg"
    android:layout_height="match_parent"
    tools:context="com.sywwifi.syw.module.my.activity.SetActivity">
    <android.support.v7.widget.Toolbar
        android:background="@drawable/shape_navigtion_gradient"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="21sp"/>

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_oneback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
   <LinearLayout
       android:paddingLeft="10dp"
       android:background="#FFFFFF"
       android:layout_width="match_parent"
       android:layout_height="50dp">
       <TextView

           android:layout_gravity="center_vertical"
           android:text="消息推送"
           android:textSize="@dimen/text2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent" />
       <com.sywwifi.syw.views.UISwitchButton
           android:id="@+id/switch_button"
           android:layout_width="28dp"
           android:layout_height="20dp"
           android:layout_gravity="center_vertical"
           android:layout_marginRight="10dp"
           app:bmHeight="25dp"
           app:bmWidth="40dp"/>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:paddingLeft="10dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="修改密码"
            android:textSize="@dimen/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
   <TextView
       android:gravity="center"
       android:background="#FFFFFF"
       android:textColor="#f00"
       android:textSize="@dimen/text2"
       android:text="退出登入"
       android:layout_width="match_parent"
       android:layout_height="50dp" />
   <!-- <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/selector_item_press"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="个人信息"
        android:textColor="@color/text2"
        android:textSize="@dimen/text2"/>-->
</LinearLayout>
