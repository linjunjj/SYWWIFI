<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activitybg"
    android:orientation="vertical"
    tools:context="com.sywwifi.syw.module.my.activity.EditAddressActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shape_navigtion_gradient"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/iv_oneback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/text1" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="50dp"
android:background="#ffffff"
android:orientation="horizontal">

<TextView
    android:textSize="@dimen/text2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.3"
    android:paddingLeft="10dp"
    android:text="收货人" />

<TextView
    android:textSize="@dimen/text2"
    android:id="@+id/tv_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.6"
    android:paddingLeft="20dp"
    android:text="陈建明" />

<View
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.1"></View>

</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="50dp"
android:layout_marginTop="1dp"
android:background="#ffffff"
android:orientation="horizontal">

<TextView
    android:textSize="@dimen/text2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.3"
    android:paddingLeft="10dp"
    android:text="联系电话" />

<TextView
    android:textSize="@dimen/text2"
    android:id="@+id/tv_phone"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.6"
    android:paddingLeft="20dp"
    android:text="1587945648" />




<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.1"
    android:gravity="right|center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@mipmap/add_opinin" />

</LinearLayout>

</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="50dp"
android:layout_marginTop="1dp"
android:background="#ffffff"
android:orientation="horizontal">

<TextView
    android:textSize="@dimen/text2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.3"
    android:paddingLeft="10dp"
    android:text="所在地区" />

<TextView
    android:textSize="@dimen/text2"
    android:id="@+id/tv_address"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.6"
    android:gravity="right"
    android:paddingRight="10dp"
    android:text="江西省南昌市青云谱区" />


-

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.1"
    android:gravity="right|center">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@mipmap/right" />

</LinearLayout>

</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="50dp"
android:layout_marginTop="1dp"
android:background="#ffffff"
android:orientation="horizontal">

<TextView
    android:textSize="@dimen/text2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.3"
    android:paddingLeft="10dp"
    android:text="街道" />

<TextView
    android:textSize="@dimen/text2"
    android:id="@+id/tv_street"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginRight="10dp"
    android:layout_weight="0.6"
    android:gravity="left"
    android:text="艾溪湖管理处（南昌高新开发区）的是分为非分为非 " />


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="0.1"
    android:gravity="right|center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@mipmap/right" />

</LinearLayout>

</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="1dp"
android:background="#ffffff"
android:orientation="horizontal">

<EditText
    android:hint="具体地址"
    android:background="@null"
    android:textSize="@dimen/text2"
    android:id="@+id/textView11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10dp" />

</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="50dp"
android:background="#ffffff"
android:orientation="horizontal"></LinearLayout>


<LinearLayout
android:id="@+id/rl_delete_address"
android:layout_width="match_parent"
android:layout_height="50dp"
android:layout_marginTop="10dp"
android:background="#ffffff">

<TextView
    android:textSize="@dimen/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:text="删除地址"
    android:textColor="#e73030" />

</LinearLayout>

</LinearLayout>