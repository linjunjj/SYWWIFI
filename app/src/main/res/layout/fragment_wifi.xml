<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wpv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#1D7AC9"
    tools:context="com.sywwifi.syw.module.wifi.fragment.WifiFragment">

   <com.sywwifi.syw.views.WaveProgressView
       android:id="@+id/wpv_2"
       android:layout_centerInParent="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       wpv:maxProgress="100"
       wpv:progress_color="#94B1DE"
       wpv:progress_text_size="0sp"
       wpv:radius="110dp"
       wpv:radius_color="#5185CC" />

   <RelativeLayout
       android:layout_centerInParent="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_yong"
          android:layout_centerHorizontal="true"
          android:textColor="@color/white"
          android:textSize="@dimen/text1"
          android:text="已使用流量"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:layout_marginTop="20dp"
          android:id="@+id/tv_wifi_flow"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/tv_yong"
          android:text="0M"
          android:textColor="@color/white"
          android:textSize="30sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:layout_marginTop="20dp"
          android:id="@+id/tv_line"
          android:background="@color/white"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/tv_wifi_flow"
          android:layout_width="120dp"
          android:layout_height="1dp" />
      <Button
          android:id="@+id/bt_wifi_login"
          android:layout_marginTop="15dp"
          android:background="@drawable/shape_btwifi_login"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/tv_line"
          android:text="登入"
          android:textColor="@color/white"
          android:textSize="@dimen/text1"
          android:layout_width="wrap_content"
          android:layout_height="30dp" />
   </RelativeLayout>


   <LinearLayout
       android:layout_marginBottom="30dp"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="match_parent" />
      <Button
          android:textSize="@dimen/text1"
          android:textColor="@color/white"
          android:background="@drawable/shape_btwifi_recharg"
          android:text="充值"
          android:layout_width="70dp"
          android:layout_height="70dp" />
      <TextView
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="match_parent" />
      <Button
          android:textSize="@dimen/text1"
          android:textColor="@color/white"
          android:background="@drawable/shape_btwifi_recharg"
          android:text="帮助"
          android:layout_width="70dp"
          android:layout_height="70dp" />
      <TextView
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="match_parent" />
      <Button
          android:id="@+id/bt_wifi_net"
          android:textSize="@dimen/text1"
          android:textColor="@color/white"
          android:background="@drawable/shape_btwifi_recharg"
          android:text="连网"
          android:layout_width="70dp"
          android:layout_height="70dp" />
      <TextView
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="match_parent" />
   </LinearLayout>

   <LinearLayout
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/wpv_2"
    android:layout_marginBottom="65dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
   <TextView
       android:text="正在使用:  "
       android:textSize="@dimen/text1"
       android:textColor="@color/white"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tv_isnetwifi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="手机4G流量"
          android:textColor="@color/white"
          android:textSize="18sp" />
      <TextView
          android:id="@+id/tv_wifi_wenhao"
          android:textColor="#ff0000"
          android:text=" !"
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
</LinearLayout>



</RelativeLayout>
