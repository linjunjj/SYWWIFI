<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sywwifi.syw.module.my.activity.WalletActivity">
    <android.support.v7.widget.Toolbar
        android:background="@drawable/shape_navigtion_gradient"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="钱包"
                android:textColor="@color/white"
                android:textSize="21sp"/>

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_oneback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
   <RelativeLayout
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp">
    <ImageView
        android:id="@+id/iv_cz"
        android:layout_centerInParent="true"
        android:src="@mipmap/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_remaining"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_cz"
        android:textSize="@dimen/text2"
        android:textColor="@color/black"
        android:text="我的余额"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
       <TextView
           android:layout_marginTop="10dp"
           android:layout_below="@id/tv_remaining"
           android:layout_centerHorizontal="true"
           android:textSize="@dimen/text1"
           android:textColor="@color/black"
           android:text="￥100.0元"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

   </RelativeLayout>

<Button
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_centerInParent="true"
    android:textSize="@dimen/text1"
    android:textColor="@color/white"
    android:background="@drawable/shape_reg_bt"
    android:text="充值"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <RelativeLayout
        android:paddingBottom="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text1"
        android:text="@string/echarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>
